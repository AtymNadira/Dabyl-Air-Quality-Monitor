#include <ESP8266WiFi.h>
#include <SPI.h>                        
#include <Wire.h>                       
#include <Adafruit_GFX.h>               
#include <Adafruit_SSD1306.h>           
#define WIRE Wire
Adafruit_SSD1306 display = Adafruit_SSD1306(128, 32, &WIRE);
#include <Adafruit_NeoPixel.h>
#define PIN           D4   
#define NUM_PIXELS    30   
Adafruit_NeoPixel strip = Adafruit_NeoPixel(NUM_PIXELS, PIN, NEO_GRB + NEO_KHZ800);
const char* ssid = "NASA";
const char* password = "Nouan2525";
WiFiServer server(80);
void setup() {
  Serial.begin(9600);
  strip.begin(); 
  strip.show();   
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi...");
  }
  Serial.println("Connected to WiFi");
  IPAddress ip = WiFi.localIP();
  Serial.print("IP Address: ");
  Serial.println(ip); 
display.begin(SSD1306_SWITCHCAPVCC, 0x3c); 
    display.clearDisplay();                    
    display.setTextSize(1);                   
    display.setTextColor(WHITE);               
    display.setCursor(15,10);                    
    display.println("NAUANIX");
    display.println("   Engineering");
    display.display();
  Serial.print("Server running on port: ");
  Serial.println(server.port());  
  server.begin();  }
void loop() {
  WiFiClient client = server.available();  
  if (client) {
    Serial.println("New client connected!");
    String data = "";
    while (client.connected()) {
      if (client.available()) {
        char c = client.read();
        data += c;
      }
    }
    client.stop();
    display.clearDisplay();                    
    display.setTextSize(2);                    
    display.setTextColor(WHITE);               
    display.setCursor(20,0);                    
    display.println("PM 2.5:");
    display.setCursor(20,15);
    display.println(data);    
    display.display();
    float conPM25=data.toFloat();
        if (conPM25 > 1.0 && conPM25 < 2000) {
       for (int i = 0; i < strip.numPixels(); i++) {
    delay(100);
    strip.setPixelColor(i, strip.Color(0, 255, 0)); 
    strip.show();} }
    if (conPM25 > 2000 && conPM25 < 31500) {
       for (int i = 0; i < strip.numPixels(); i++) {
    delay(100);
    strip.setPixelColor(i, strip.Color(255, 255, 0)); 
    strip.show();} }
      if (conPM25 > 31500) {
       for (int i = 0; i < strip.numPixels(); i++) {
    delay(100);
    strip.setPixelColor(i, strip.Color(255, 0, 0));
    strip.show();
  }}}}


